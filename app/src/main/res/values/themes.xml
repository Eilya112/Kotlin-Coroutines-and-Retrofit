<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KotlinCoroutinesAndRetrofit" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryAlpha5</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetATestKotlin="l">?attr/colorPrimaryVariant
        </item>

        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/black</item>
        <item name="fontFamily">@font/primary_regular</item>
    </style>

    <style name="Theme.KotlinCoroutinesAndRetrofit" parent="Base.Theme.KotlinCoroutinesAndRetrofit" />

    <style name="text_title" parent="Base.Theme.KotlinCoroutinesAndRetrofit">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/primary_bold</item>
    </style>

    <style name="text_des" parent="Base.Theme.KotlinCoroutinesAndRetrofit">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/primary_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>