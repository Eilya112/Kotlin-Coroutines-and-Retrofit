<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KotlinCoroutinesAndRetrofit" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryAlpha5</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryAlpha5</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetATestKotlin="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/white</item>
        <item name="fontFamily">@font/primary_regular</item>
    </style>
</resources>